
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer






<header class="dx-header dx-box-4">
    <div class="bg-image bg-image-parallax">
        <img src="/wwwroot/Content/images/bg-header.png" class="jarallax-img" alt="">
        <div style="background-color: rgb(0, 0, 0,0.85);"></div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <h1 class="display-3 text-white">@localizer["NST-Desk"]</h1>
                <p class="lead text-1">
                   @localizer["intro1"]
                  </p>
                    <a asp-action="ProductDisplay" asp-controller="Products" class="dx-btn dx-btn-lg mt-10">@localizer["ViewProducts"]</a>
            </div>
        </div>
    </div>
</header>



<div class="dx-box-1">
    <div class="container">
        <div class="row vertical-gap lg-gap">
            <div class="col-lg-4">


                <div class="dx-feature dx-feature-1">
                    <div class="dx-feature-decorated"></div>
                    <div class="dx-feature-icon">
                        <span class="icon pe-7s-diamond"></span>
                    </div>
                    <div class="dx-feature-cont">
                        <div class="dx-feature-title">770 +</div>
                        <div class="dx-feature-text">@localizer["happycostomers"]</div>
                    </div>
                </div>


                <div class="dx-feature dx-feature-1">
                    <div class="dx-feature-decorated"></div>
                    <div class="dx-feature-icon">
                        <span class="icon pe-7s-like"></span>
                    </div>
                    <div class="dx-feature-cont">
                        <div class="dx-feature-title">4.9</div>
                        <div class="dx-feature-text">@localizer["AuthorRating"]</div>
                    </div>
                </div>

            </div>
            <div class="col-lg-6">
                <h2>Who we are</h2>
                <p class="mb-0">
                    @localizer["intro2"]
                </p>
            </div>
        </div>
    </div>
</div>

<div class="dx-box-1 bg-dark-1">
    <div class="container">
        <div class="row mnt-40 mnb-40">

            <div class="col-12 col-md-6 col-lg-4">

                <div class="dx-feature dx-feature-2">
                    <div class="dx-feature-cont">
                        <div class="dx-feature-icon">
                            <span class="icon pe-7s-edit"></span>
                        </div>
                        <div class="dx-feature-title">@localizer["EasySetup"]</div>
                        <div class="dx-feature-text">@localizer["intro3"]</div>
                    </div>
                    <span class="dx-decorated" style="background-image: url('C:\Users\worrior107\source\repos\HelpDeskApp\HelpDesk\wwwroot\Content\images\decorated-pattern-dark.svg')"></span>
                </div>

            </div>

            <div class="col-12 col-md-6 col-lg-4">

                <div class="dx-feature dx-feature-2">
                    <div class="dx-feature-cont">
                        <div class="dx-feature-icon">
                            <span class="icon pe-7s-timer"></span>
                        </div>
                        <div class="dx-feature-title">@localizer["LifetimeUpdates"]</div>
                        <div class="dx-feature-text">@localizer["intro4"]</div>
                    </div>
                    <span class="dx-decorated" style="background-image: url('../../wwwroot/Content/images/decorated_pattern_dark.svg');"></span>
                </div>

            </div>


            <div class="col-12 col-md-6 col-lg-4">

                <div class="dx-feature dx-feature-2">
                    <div class="dx-feature-cont">
                        <div class="dx-feature-icon">
                            <span class="icon pe-7s-headphones"></span>
                        </div>
                        <div class="dx-feature-title">@localizer["OutstandingSupport"]</div>
                        <div class="dx-feature-text">@localizer["intro5"]</div>
                    </div>
                    <span class="dx-decorated" style="background-image: url('../../wwwroot/Content/images/decorated_pattern_dark.svg');"></span>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="dx-box-1 bg-grey-6">
    <div class="container">
        <h2 class="text-center mb-60">@localizer["LatestProducts"]</h2>

        <div class="row vertical-gap">
            @foreach (var item in ViewBag.latestProduct)
            {


                <div class="col-12 col-md-6 col-lg-4">

                    <div class="dx-portfolio-item dx-block-decorated">
                        <div class="dx-portfolio-item-image">
                            <div class="dx-portfolio-item-overlay" style="background-color: rgba(27, 27, 27, .8);">
                                <a href="#" class="dx-btn dx-btn-md dx-btn-transparent-style-2 m-10">@localizer["LiveDemo"]</a>
                                <a href="#" class="dx-btn dx-btn-md dx-btn-transparent-style-2 m-10">@localizer["BuyNow"]</a>
                            </div>
                            <img src=@Url.Content(item.imgUrl) alt="Product Img">
                        </div>
                        <a asp-action="ProductDetail" asp-controller="Products" asp-route-refId=@item.refId class="dx-portfolio-item-info">
                            <span class="dx-portfolio-item-title">@item.name</span>

                            <span class="dx-portfolio-item-price">$@item.price</span>

                        </a>
                    </div>

                </div>

            }
        </div>
        <div class="text-center mt-70">
            <a asp-action="ProductDisplay" asp-controller="Products" class="dx-btn dx-btn-lg">@localizer["ViewProducts"]</a>
        </div>

        <div class="dx-box-1">
            <span class="dx-decorated" style="background-image: url('../../wwwroot/Content/images/decorated-pattern-light.svg');"></span>
        </div>

        <h2 class="text-center mb-40">Reviews</h2>

    </div>
</div>
<div class="row no-gutters">
 
    <div class="col-lg-12 bg-main-1">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="container">
                    <div class="dx-box-1">
                        <h2 class="text-white">@localizer["VisitourSupportDesk"]</h2>
                        <p class="text-white op-8">@localizer["into6"]</p>
                        <a asp-action="HelpCenter" asp-controller="Home" class="dx-btn dx-btn-lg dx-btn-transparent">@localizer["Getsupport"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
