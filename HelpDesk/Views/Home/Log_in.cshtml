@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@model HelpDesk.Models.LogUser

@{
    Layout = "~/Views/Shared/_normalLayout.cshtml";
}
 

    <div style="top:50%;left:50%">
        <div class="dx-signin-content dx-signin text-center">
            <h1 class="h3 text-white mb-30">@localizer["Log_in"]</h1>



            <form class="dx-form" asp-action="Log_in" method="post" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]";>
                <div class="text-danger" asp-validation-summary="ModelOnly">

                </div>

                <div class="dx-form-group-md">
                    <input type="text" asp-for="Email" class="form-control form-control-style-4" placeholder="@Html.DisplayNameFor(m => m.Email)">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="dx-form-group-md">
                    <input type="password" asp-for="Password" class="form-control form-control-style-4" placeholder="@Html.DisplayNameFor(m => m.Password)">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="dx-form-group-md">
                    <input type="submit" class="dx-btn dx-btn-block dx-btn-popup" value=@localizer["Log_in"] />
                </div>

                <div class="dx-form-group-md">
                    <div class="d-flex justify-content-between">
                        <a asp-action="ResetPassword" asp-controller="Home">@localizer["Reset_my_password"]</a>
                        <span> </span>
                        <a asp-action="Sign_Up" asp-controller="Home"> @localizer["Sign_Up"]</a>
                    </div>
                </div>





            </form>

        </div>
    </div>
