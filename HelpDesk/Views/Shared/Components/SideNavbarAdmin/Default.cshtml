
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer



@model Entities.Entities.User

<div id="layoutSidenav_nav" style="position: fixed;width: 225px;height: 88vh;">
    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">

                <a class="nav-link" asp-action="DashBoardAdmin" asp-controller="Agent">

                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                    @localizer["Dashboard"]
                </a>

                <a class="nav-link" asp-action="myTickets" asp-controller="Agent">

                    <div class="sb-nav-link-icon"><i class="fas fa-clipboard-list"></i></div>
                    @localizer["MyTicket"]
                </a>

@*                IN CASE FO WEB MASTER WE NEED TO SHOW ALL THE TICKETS EVEN CLOSED ONES
*@
                @if (Model.role.roleName.Equals("SuperAdmin"))
                {
                    <a class="nav-link" asp-action="FULlistTickets" asp-controller="Tickets">
                        <div class="sb-nav-link-icon"><i class="far fa-calendar-alt"></i></div>
                        @localizer["Manage_Tickets"]
                    </a>
                }
                else
                {
                    <a class="nav-link" asp-action="listTickets" asp-controller="Tickets">
                        <div class="sb-nav-link-icon"><i class="far fa-calendar-alt"></i></div>
                        @localizer["Manage_Tickets"]
                    </a>
                }

                @if (ViewBag.listPermissions.Contains("Manage Admins") || ViewBag.listPermissions.Contains("Manage Agents"))
                {


                    <a class="nav-link collapsed" href="#collapseLayouts" data-toggle="collapse" data-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                        <div class="sb-nav-link-icon"><i class="fas fa-users-cog"></i></div>
                        @localizer["users"]
                        <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                    </a>

                    <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                        <nav class="sb-sidenav-menu-nested nav">
                            <a class="nav-link" asp-action="ShowAgents" asp-controller="Admin">@localizer["Agents"]</a>
                            @if (Model.role.roleName.Equals("SuperAdmin"))
                            {
                                <a class="nav-link" asp-action="ShowAdmins" asp-controller="SuperAdmin">@localizer["Admins"]</a>

                            }
                        </nav>
                    </div>
                }

                @if (ViewBag.listPermissions.Contains("Manage Clients"))
                {
                    <a class="nav-link" asp-action="customersList" asp-controller="Agent">
                        <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                        @localizer["Customers"]
                    </a>
                }
                @if (ViewBag.listPermissions.Contains("Manage Products"))
                {
                    <a class="nav-link" asp-action="Index" asp-controller="Products">
                        <div class="sb-nav-link-icon"><i class="fab fa-product-hunt"></i></div>
                        @localizer["Products"]
                    </a>
                }

                @if (ViewBag.listPermissions.Contains("Manage knowledge base"))
                {
                    <a class="nav-link" asp-action="listArticles" asp-controller="KnowledgeBase">
                        <div class="sb-nav-link-icon"><i class="fas fa-database"></i></div>
                        @localizer["Knowledge_Base"]
                    </a>
                }



            </div>
        </div>
        <div class="sb-sidenav-footer">

            <div class="small">@localizer["Loggedinas"]:</div>
            @Model.role.roleName
        </div>
    </nav>

</div>



