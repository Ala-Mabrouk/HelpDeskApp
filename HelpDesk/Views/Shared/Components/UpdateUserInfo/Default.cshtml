

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@model Entities.Entities.Agent

<div class="dx-box-decorated">

    <form asp-action="verifModel" method="post" class="dx-form">
        <div class="dx-box-content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table cellpadding="3px">

                <tr>
                    <td><label asp-for="FirstName" class="mnt-7"></label></td>
                    <td>
                        <input required type="text" asp-for="FirstName" class="form-control form-control-style-2" id="first-name">
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                    </td>
                </tr>

                <tr>
                    <td><label asp-for="LastName" class="mnt-7"></label></td>
                    <td>
                        <input required type="text" asp-for="LastName" class="form-control form-control-style-2" id="last-name">
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </td>
                </tr>

                <tr>
                    <td><label asp-for="Email" class="mnt-7"></label></td>
                    <td>
                        <input required type="email" aria-describedby="emailHelp" asp-for="Email" class="form-control form-control-style-2" id="email-address">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </td>
                </tr>
                <tr>
                    <td><label asp-for="Phone" class="mnt-7"></label></td>
                    <td>
                        <input required pattern="^([0-9]{8})" type="text" asp-for="Phone" class="form-control form-control-style-2" id="zip">
                        <span asp-validation-for="Phone" class="text-danger"></span>

                    </td>
                </tr>
                <tr>
                    <td> <label asp-for="HomeAdresse" class="mnt-7"></label></td>
                    <td>
                        <input required type="text" asp-for="HomeAdresse" class="form-control form-control-style-2" id="city">
                        <span asp-validation-for="HomeAdresse" class="text-danger"></span>

                        <input type="hidden" asp-for="Id"  id="id">
                        <input type="hidden" asp-for="Password" id="password" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="custom-control custom-switch">
                            <input type="checkbox" asp-for="status" class="custom-control-input" name="AgentStatus" id="customSwitch1">
                            <span asp-validation-for="status" class="text-danger"></span>

                            <label class="custom-control-label" for="customSwitch1"> </label>
                        </div>
                    </td>
                    <td>
                        @localizer["Active/Disable"]
                    </td>
                </tr>


            </table>


            <div class="dx-box-content" style="display: flex; justify-content: space-between;">
                <a href="javascript: history.go(-1)" class="btn btn-outline-danger btn-lg mr-10">@localizer["Cancel"]</a>
                <button type="submit" class="btn btn-primary btn-lg ml-30">@localizer["SaveChanges"]</button>

            </div>


        </div>
    </form>


</div>