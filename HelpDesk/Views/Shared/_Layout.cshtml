        <div class="container">

            <a asp-action="index" asp-controller="Home" class="dx-nav-logo">
                <img src="/Content/images/logo.svg" alt="" width="88px">
            </a>

            <button class="dx-navbar-burger">
                <span></span>
                <span></span>
                <span></span>
            </button>

            <div class="dx-navbar-content">



                <ul class="dx-nav dx-nav-align-left">
                    <li class="dx-drop-item">
                        <a asp-action="ProductDisplay" asp-controller="Products">
                            Store
                        </a>
                    </li>

                    <li class="dx-drop-item">
                        <a asp-action="HelpCenter" asp-controller="Home">
                            @localizer["Support"]
                        </a>
                    </li>
                    <li class="dx-drop-item">
                        <a asp-action="Index" asp-controller="Tickets">
                            @localizer["My_tickets"]
                        </a>
                    </li>
                    <li class="dx-drop-item">
                        <a asp-action="addTicket" asp-controller="Tickets">
                            @localizer["Submit_ticket"]
                        </a>
                    </li>
                    <li class="dx-drop-item">
                        <a asp-action="Index" asp-controller="KnowledgeBase">
                            @localizer["Articles&FAQ"]
                        </a>
                    </li>
                </ul>

                <ul class="dx-nav dx-nav-align-right">
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li>

                            <div class="dropdown dx-dropdown dx-dropdown-signin">

                                <a id="dropdownSignin" class="dx-nav-signin" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                    @await Component.InvokeAsync("NavBarWithLog", User.Identity.Name)

                                </a>

                                <ul class="dropdown-menu" aria-labelledby="dropdownSignin">


                                    <li><a asp-action="Index" asp-controller="Tickets"><span class="icon pe-7s-user"></span>@localizer["Account"]</a></li>
                                    <li><a asp-action="settings" asp-controller="Home"><span class="icon pe-7s-config"></span>@localizer["Settings"]</a></li>
                                    <li><a asp-action="log_out" asp-controller="Home"><span class="icon pe-7s-back"></span>@localizer["Log_out"]</a></li>



                                </ul>

                            </div>
                        </li>

                    }
                    else
                    {
                        <li>
                            <a asp-action="Log_in" asp-controller="Home">@localizer["Log_In"]</a>
                        </li>
                        <li>
                            <span> <a class="dx-btn dx-btn-md dx-btn-transparent" asp-action="Sign_Up" asp-controller="Home">@localizer["Sign_Up"]</a></span>
                        </li>
                    }
                    <li>
                        @await Html.PartialAsync("_CulturePartial")
                    </li>
                </ul>


            </div>
        </div>
    </nav>

    <div class="dx-navbar dx-navbar-fullscreen">
