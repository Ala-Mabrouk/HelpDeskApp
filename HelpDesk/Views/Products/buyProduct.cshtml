
@model HelpDesk.Models.PaymentCard

@{ Layout = "~/Views/Shared/_NoHeaderLayout.cshtml";}


<header class="dx-header dx-box-5">
    <div class="bg-image bg-image-parallax">
        <img src="assets/images/bg-header-2.png" class="jarallax-img" alt="">
        <div style="background-color: rgba(27, 27, 27, .8);"></div>
    </div>

    <div class="container mnb-8">
        <div class="row justify-content-center">
            <div class="col-xl-7">
                <h1 class="h4 mb-10 text-white text-center">Checkout</h1>


                <!-- START: Breadcrumbs -->
                <ul class="dx-breadcrumbs text-center">

                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>


                    <li><a asp-action="ProductDispaly" asp-controller="Products">Store</a></li>

                    <li>Checkout</li>


                </ul>
                <!-- END: Breadcrumbs -->

            </div>
        </div>
    </div>
</header>




<div class="dx-box-5 pb-100 bg-grey-6">
    <div class="container">
        <div class="row vertical-gap md-gap">
            <div class="col-lg-6">
                <div class="dx-box dx-box-decorated">
                    <div class="dx-box-content">
                        <h2 class="h6 mnt-5 mnb-5">Product Information</h2>
                    </div>
                    <div class="dx-separator"></div>
                    <div class="table-responsive">
                        <table class="dx-table dx-table-checkout">
                            <tbody>

                                <tr>
                                    <th scope="row" class="dx-table-checkout-img">
                                        <a asp-action="ProductDetail" asp-controller="Products" asp-route-refId="@ViewBag.product.refId">
                                            <img src="@Url.Content(ViewBag.product.imgUrl)" alt="">
                                        </a>
                                    </th>
                                    <td class="dx-table-checkout-title">
                                        <a asp-action="ProductDetail" asp-controller="Products" asp-route-refId="@ViewBag.product.refId">@ViewBag.product.name</a>
                                    </td>
                                    <td class="dx-table-checkout-price">
                                        <div class="dx-table-checkout-price">$@ViewBag.product.price</div>
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="dx-separator"></div>

                    <div class="dx-box-content text-right">
                        <p class="text-dark-1 mnt-8 mnb-8">Total Payment: <strong class="fs-18">$@ViewBag.product.price</strong></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="dx-box dx-box-decorated">
                    <div class="dx-box-content">
                        <h2 class="h6 mnt-5 mnb-5">Payments Details</h2>
                    </div>
                    <div class="dx-separator"></div>
                    <div class="dx-box-content">
                        <p class="mnt-6 mb-3 text-dark-1">Choose Payment Method</p>
                        <ul class="nav dx-tab dx-tab-payment mnt-10 row vertical-gap sm-gap" role="tablist">
                            <li class="nav-item col-sm-6">
                                <a class="nav-link active dx-tab-payment-method" id="card-tab" data-toggle="tab" href="#card" role="tab" aria-controls="card" aria-selected="true">
                                    <img src="~/Content/images/payment-card.png" alt="">
                                    <span class="dx-tab-payment-method-text">Credit Card</span>
                                </a>
                            </li>
                            <li class="nav-item col-sm-6">
                                <a class="nav-link dx-tab-payment-method" id="paypal-tab" data-toggle="tab" href="#paypal" role="tab" aria-controls="paypal" aria-selected="false">
                                    <img src="~/Content/images/payment-paypal.png" alt="">
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="tab-pane fade show active dx-tab-pane" id="card" role="tabpanel" aria-labelledby="card-tab">
                        <div class="dx-separator"></div>
                        <form asp-action="buyProduct" asp-controller="Products" method="post" class="dx-form">



                            <input type="hidden"  value="@ViewBag.product.refId" name="productRefId" />


                            <div class="dx-box-content">

                                <div class="dx-form-group">
                                    <label asp-for="nameOnCard" class="mnt-7"></label>
                                    <input type="text" asp-for="nameOnCard" class="form-control form-control-style-2" placeholder="Enter Full Name">
                                    <span asp-validation-for="nameOnCard" class="text-danger"></span>

                                </div>

                                <div class="dx-form-group">
                                    <label asp-for="cardNumber" class="mnt-7"></label>
                                    <input type="text" asp-for="cardNumber" class="form-control form-control-style-2 dx-card-number " placeholder="1234 5678 9012 3456">
                                    <span asp-validation-for="cvvNumber" class="text-danger"></span>

                                    <div class="text-danger" asp-validation-summary="ModelOnly">

                                    </div>
                                </div>
                                <div class="dx-form-group">
                                    <div class="row vertical-gap">
                                        <div class="col-sm-8">
                                            <label for="date" class="mnt-7">Expiration Date</label>
                                            <div class="dx-form-group-inputs">
                                                <select class="custom-select form-control form-control-style-2" id="date">
                                                    <option value="1">January</option>
                                                    <option value="2">February</option>
                                                    <option value="3">March</option>
                                                    <option value="4">April</option>
                                                    <option value="5">May</option>
                                                    <option value="6">June</option>
                                                    <option value="7">July</option>
                                                    <option value="8">August</option>
                                                    <option value="9">September</option>
                                                    <option value="10">October</option>
                                                    <option value="11" selected>November</option>
                                                    <option value="12">December</option>
                                                </select>
                                                <select class="custom-select form-control form-control-style-2 w-auto">
                                                    <option value="1">2026</option>
                                                    <option value="2">2025</option>
                                                    <option value="3">2024</option>
                                                    <option value="4">2023</option>
                                                    <option value="5">2022</option>
                                                    <option value="6" selected>2021</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <label asp-for="cvvNumber" class="mnt-7">CVV Number</label>
                                            <input type="text" asp-for="cvvNumber" class="form-control form-control-style-2 dx-form-quantity-input"  placeholder="XXX">
                                            <span asp-validation-for="cvvNumber" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="dx-separator"></div>
                            <div class="dx-box-content">
                                <div class="dx-form-group">
                                    <label asp-for="email" class="mnt-7"></label>
                                    <input type="email" asp-for="email" aria-describedby="emailHelp" class="form-control form-control-style-2" id="email" placeholder="Enter your Email">
                                    <span asp-validation-for="email" class="text-danger"></span>
                                </div>
                                <div class="dx-form-group">
                                    <label asp-for="firstName" class="mnt-7"></label>
                                    <input type="text" asp-for="firstName" class="form-control form-control-style-2" id="first-name" placeholder="Enter your First Name">
                                    <span asp-validation-for="firstName" class="text-danger"></span>
                                </div>
                                <div class="dx-form-group">
                                    <label asp-for="lastName" class="mnt-7"></label>
                                    <input type="text" asp-for="lastName" class="form-control form-control-style-2" id="last-name" placeholder="Enter your Last Name">
                                    <span asp-validation-for="lastName" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="dx-separator"></div>
                            <div class="dx-box-content">
                                <button type="submit" class="dx-btn dx-btn-xl dx-btn-block">

                                    Purchase $@ViewBag.product.price
                                </button>
                            </div>

                        </form>
                    </div>
                    <div class="tab-pane fade dx-tab-pane" id="paypal" role="tabpanel" aria-labelledby="paypal-tab">
                        <div class="dx-separator"></div>
                        <div class="dx-box-content">

 





                            <a class="dx-btn dx-btn-xl dx-btn-block"
                         asp-action="buyTheProduct" asp-controller="Products" asp-route-pRef=@ViewBag.product.refId
>
                                Purchase $@ViewBag.product.price
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

