            <li><a asp-action="index" asp-controller="Home">Home</a></li>


            <li><a asp-action="ProductDisplay" asp-controller="Products">Store</a></li>

            <li>@ViewBag.Product.name</li>


        </ul>
        <!-- END: Breadcrumbs -->

    </div>
</header>



