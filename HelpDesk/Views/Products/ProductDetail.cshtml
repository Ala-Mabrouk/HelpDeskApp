                            <span>@ViewBag.Product.refId</span>
                        </div>
                        <div class="dx-widget-information">
                            <div class="dx-widget-information-title">Created</div>

                            <span>@ViewBag.Product.addedDate</span>
                        </div>
                        <div class="dx-widget-information">
