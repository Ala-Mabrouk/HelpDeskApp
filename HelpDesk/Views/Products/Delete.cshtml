@model Entities.Entities.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="modal fade" id="deleteProduct">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            

                <button type="button" class="close" data-dismiss="modal">x</button>

        

            <div class="modal-body">


                <div class="dx-box-content">
                    <h3>Are you sure you want to delete this?</h3>
                    <table cellpadding="3px">
                        <tr>
                            <td><label asp-for="name" class="mnt-7"></label></td>
                            <td>
                                <span   >@Model.name</span>
                            </td>
                        </tr>

                        <tr>
                            <td><label asp-for="refId" class="mnt-7"></label></td>
                            <td>
                                <span>@Model.refId</span>
                            </td>
                        </tr>

                        <tr>
                            <td><label asp-for="factoryName" class="mnt-7"></label></td>
                            <td>
                                <span>@Model.factoryName    </span>
                            </td>
                        </tr>


                    </table>
                </div>



                <div class="modal-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="refId" />
                        <button type="submit" class="btn btn-danger" data-save="modal">Yes</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">close</button>
                    </form>
                </div>

            </div>

        </div>


    </div>




