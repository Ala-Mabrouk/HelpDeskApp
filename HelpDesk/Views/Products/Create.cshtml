@model Entities.Entities.Product

@{
    ViewData["Title"] = "Create";


}

<div class="modal fade" id="addProduct">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Product</h4>
                <button type="button" class="close" data-dismiss="modal">x</button>

            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create" asp-controller="Products">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="refId" class="control-label"></label>
                                <input asp-for="refId" class="form-control" />
                                <span asp-validation-for="refId" class="text-danger"></span>
                            </div>
                            <tr><td><span class="text-danger"></span></td></tr>
                            <label asp-for="name" class="control-label"></label>
                            <input asp-for="name" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>

                            <div class="form-group">
                                <label asp-for="description" class="control-label"></label>
                                <input asp-for="description" class="form-control" />
                                <span asp-validation-for="description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="factoryName" class="control-label"></label>
                                <input asp-for="factoryName" class="form-control" />
                                <span asp-validation-for="factoryName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="dateBuild" class="control-label"></label>
                                <input type="date" asp-for="dateBuild" class="form-control" />
                                <span asp-validation-for="dateBuild" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="dateValidate" class="control-label"></label>
                                <input type="date" asp-for="dateValidate" class="form-control" />
                                <span asp-validation-for="dateValidate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="category" class="control-label"></label>
                                <input asp-for="category" class="form-control" />
                                <span asp-validation-for="category" class="text-danger"></span>
                            </div>
                            @*
                                missing img input
                                toadd later *@


                            <div class="form-group">
                                <button type="submit" class="btn btn-primary" data-save="">Save</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">close</button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">





        </div>

    </div>

</div>


 