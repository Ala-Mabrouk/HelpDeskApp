@model Entities.Entities.Article

@{ Layout = null;}
<div class="modal fade" id="deleteArticle">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">


            <button type="button" class="close" data-dismiss="modal">x</button>



            <div class="modal-body">


                <div class="dx-box-content">
                    <h3>Are you sure you want to close this article?</h3>

                </div>



                <div class="modal-footer">
                    <form asp-action="delete" asp-controller="KnowledgeBase">
                        <input type="hidden" name="ArticleId" asp-for="ArticleId" />
                        <button type="submit" class="btn btn-danger" data-save="modal">Yes</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">close</button>
                    </form>
                </div>

            </div>

        </div>


    </div>




