
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer


@model Entities.Entities.Article


<div class="dx-box bg-white">
    <div class="container">
        <ul class="dx-links text-center">
            <li><a <a asp-action="Index" asp-controller="Home">@localizer["SupportHome"]</a></li>
            <li class="active"><a asp-action="Index" asp-controller="KnowledgeBase">@localizer["KnowledgeBase"]</a></li>
            <li><a asp-action="Index" asp-controller="Tickets">@localizer["TicketSystem"]</a></li>
        </ul>
    </div>
</div>
<div class="dx-separator"></div>

<div class="dx-box-5 pb-100 bg-grey-6">
    <div class="container">
        <div class="row vertical-gap md-gap">
            <div class="col-lg-8">
                <div class="dx-box dx-box-decorated">
                    <div class="dx-blog-post">
                        <div class="dx-blog-post-box pt-30 pb-30">
                            <h2 class="h4 mnt-5 mb-8">@Model.Title</h2>


                            <!-- START: Breadcrumbs -->
                            <ul class="dx-breadcrumbs text-left dx-breadcrumbs-dark mnb-8">

                                <li><a asp-action="Index" asp-controller="Home">@localizer["SupportHome"]</a></li>


                                <li><a asp-action="Index" asp-controller="KnowledgeBase">@localizer["Articles"]</a></li>


                                <li><a asp-action="singleArticleCategory" asp-controller="KnowledgeBase" asp-route-category="@Model.articleCategory.categoryName">
                                    @Model.articleCategory.categoryName</a></li>

                                <li>@Model.Title</li>


                            </ul>
                        </div>


                        <div class="dx-separator"></div>

                        <div class="dx-separator"></div>
                        <div class="dx-blog-post-box">
                            @Model.content
                        </div>

                        <div class="dx-separator"></div>
                        <div class="dx-blog-post-box pt-30 pb-30">
                            <ul class="dx-blog-post-info mnt-15 mnb-2">
                                <li>Date: @Model.lastModified</li>
                            </ul>
                            <ul class="dx-social-links dx-social-links-style-2 mt-20">
                                <li>
                                    <a href="#" class="dx-social-twitter"><span class="icon fab fa-twitter"></span> Twitter</a>
                                </li>
                                <li>
                                    <a href="#" class="dx-social-facebook"><span class="icon fab fa-facebook"></span> Facebook</a>
                                </li>
                                <li>
                                    <a href="#" class="dx-social-google"><span class="icon fab fa-google"></span> Google</a>
                                </li>
                                <li>
                                    <a href="#" class="dx-social-pinterest"><span class="icon fab fa-pinterest"></span> Pinterest</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="dx-box dx-box-content dx-box-decorated mt-40">
                    <div class="row vertical-gap align-items-center justify-content-center">
                        <div class="col-auto">
                            <h3 class="h5 mnt-6 mnb-6">@localizer["msg"]Was this helpful to you?</h3>
                        </div>
                        <div class="col-auto d-flex">
                            <a href="#" class="dx-btn dx-btn-md dx-btn-main-1">@localizer["Yes"]</a>
                            <a href="#" class="dx-btn dx-btn-md dx-btn-grey-2 ml-20">@localizer["No"]</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="dx-sticky dx-sidebar" data-sticky-offsetTop="120" data-sticky-offsetBot="40">


                    <div class="dx-widget dx-box dx-box-decorated">
                        <form action="#" class="dx-form dx-form-group-inputs">
                            <input type="text" name="" value="" class="form-control form-control-style-2" placeholder="Search...">
                            <button class="dx-btn dx-btn-lg dx-btn-grey dx-btn-grey-style-2 dx-btn-icon"><span class="icon fas fa-search"></span></button>
                        </form>
                    </div>
                    <div class="dx-widget dx-box dx-box-decorated">
                        <div class="dx-widget-title">@localizer["ArticlesCategories"]</div>
                        @await Component.InvokeAsync("ArticlesCategories")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

