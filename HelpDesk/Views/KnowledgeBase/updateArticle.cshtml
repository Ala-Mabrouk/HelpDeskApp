
@model Entities.Entities.Article;

@{ Layout = "~/Views/Shared/_AdminLayout.cshtml";}

 


<div class="container">
    <div class="card-header text-center">

        <h3>Updating @Model.Title</h3>
    </div>

    <div class="card-body">
        <form asp-action="updateArticle" asp-controller="KnowledgeBase" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArticleId" value="@Model.ArticleId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input required asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="content" class="control-label"></label>
                <textarea required asp-for="content" class="form-control"></textarea>
                <span asp-validation-for="content" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="articleCategory" class="control-label"></label>
                @Html.DropDownListFor(model => model.categoryId, ViewBag.ArticlesCategories as SelectList, new { @class = "form-control dx-select-ticket" })
                @Html.ValidationMessageFor(model => model.categoryId)

            </div>
            @*      <div class="form-group">
            <label asp-for="category" class="control-label"></label>
            <input required asp-for="category" class="form-control" />
            <span asp-validation-for="category" class="text-danger"></span>
        </div>*@



            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="far fa-save"></i>&nbsp;Update</button>
                <button type="button" class="btn btn-primary"><i class="far fa-times-circle"></i>&nbsp;Close</button>

            </div>
        </form>
    </div>


</div>
