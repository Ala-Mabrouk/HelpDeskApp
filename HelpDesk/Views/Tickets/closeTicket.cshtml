@model Entities.Entities.Ticket
 
@{ Layout = null;}
<div class="modal fade" id="closeTicket">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">


            <button type="button" class="close" data-dismiss="modal">x</button>



            <div class="modal-body">


                <div class="dx-box-content">
                    <h3>Are you sure you want to close this ticket @Model.ticketId?</h3>
                   
                </div>



                <div class="modal-footer">
                    <form asp-action="close" asp-controller="Tickets">
                        <input type="hidden" name="ticketId" asp-for="ticketId" />
                        <button type="submit" class="btn btn-danger" data-save="modal">Yes</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">close</button>
                    </form>
                </div>

            </div>

        </div>


    </div>




