                                <span asp-validation-for="ticketTitle" class="text-danger"></span>
                            </div>
                            <div class="dx-form-group">
                                <label asp-for="ticketDescription" class="mnt-7"></label>
                                <textarea  asp-for="ticketDescription" class="form-control form-control-style-2" placeholder=@localizer["Description"]></textarea>
                                <span asp-validation-for="ticketDescription" class="text-danger"></span>
