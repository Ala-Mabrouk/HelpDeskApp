

@model Entities.Entities.Client

@{ Layout = null;}

<div class="modal fade" id="addClient">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered ">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add new Client</h4>
                <button type="button" class="close" data-dismiss="modal">x</button>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="container">
                        <form asp-action="addClient" asp-controller="Admin" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <tr><td><span class="text-danger"></span></td></tr>
                            <label asp-for="FirstName" class="control-label"></label>
                            <input required asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>

                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input required asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input type="email" required asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{4,25}$" type="password" asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input required pattern="^([0-9]{8})$" type="text" asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="HomeAdresse" class="control-label"></label>
                                <input  asp-for="HomeAdresse" class="form-control" />
                                <span asp-validation-for="HomeAdresse" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="roleId" value="3" />
                            <button type="reset" class="btn btn-link btn-sm mt-10">reset input</button>
                            <div class="dx-box-content" style="display: flex; justify-content: space-between;">
                                <button class="btn btn-outline-danger btn-lg mr-10" data-dismiss="modal"><i class="far fa-times-circle"></i>&nbsp;Cancel</button>
                                <button type="submit" class="btn btn-primary btn-lg ml-30"><i class="far fa-save"></i>&nbsp;Save Changes</button>

                            </div>

                        </form>
                    </div>
                </div>
            </div>


        </div>

    </div>


</div>

 