                                    <img src="@Url.Content(item.imgUrl)" alt="product img">
                                </div>
                                <a href="product.html" class="dx-portfolio-item-info">
                                    <div>
                                        <span class="dx-portfolio-item-title"></span>

                                        <label>Factory name</label> @item.factoryName

                                        <span class="dx-portfolio-item-price">@item.price</span>
                                    </div>
                                    <div>@item.description</div>



                                </a>

                            </div>*@





                        @*
